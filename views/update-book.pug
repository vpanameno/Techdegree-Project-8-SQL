extends layout.pug

block content
  h1= title

  if errors
      h1.error Oops!
      each error in errors
          p.error=error.message

  form(action=`/books/${book.id}`, method="post")
    div
      label(for="title") Title:
      input(id="title", type="text", name="title" value=book.title)
    br
    div
      label(for="author") Author:
      input(id="author", type="text", name="author" value=book.author)
    br
    div
      label(for="genre") Genre:
      input(id="genre", type="text", name="genre" value=book.genre)
    br
    div
      label(for="year") Year:
      input(id="year", type="text", name="year" value=book.year)
    br
    div
      input(type="submit", name="edit" value="Update Book")
    br
    a(href="/books/" + book.id + "/delete", class="button") Delete Book

    br
    div
    br
    a(href="/books", class="button") Cancel
