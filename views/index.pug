extends layout.pug

block content
  h1= "Books"
  p Welcome to Valerie's Library!
  div
  form(action="/books/new", method="get")
    input(type='submit', value="Create New Book")

  table(style="width:50%")
    tr
      th Title
      th Author
      th Genre
      th Year
    each book in books
      tr
          td
            a(href=`/books/${book.id}`) #{book.title}
          td=book.author
          td=book.genre
          td=book.year
